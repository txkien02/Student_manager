@model IEnumerable<Data.Models.DTO.ClassModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Danh sách lớp học</title>
</head>
<body>
    
    <h1>Danh sách lớp học</h1>
    
    <table>
        <thead>
            <tr>
                <th>Tên lớp</th>
                <th>Tổng số học sinh</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.TotalStudents</td>
                    <td style="display: flex; align-items: center;">
                        <a asp-action="EditClass"  asp-route-id="@item.Id" style="padding-right: 7px">Sửa</a> |
                        <form asp-action="Index" method="post" class="delete-form" asp-route-id="@item.Id" style="padding-left: 7px">
                            <button type="submit" class="delete-button" onclick="return confirm('Are you sure you want to delete this class?')">Xoá</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div style="margin-top: 15px">
        <a asp-action="CreateClass" style="border: 1px solid;
    padding: 7px;
    border-radius: 5px;">Thêm lớp học mới</a>
    </div>
    
    @if (ViewData["error"] != null)
    {
        <br />
        <br />
        <label>@ViewData["error"]</label>
    }

    <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Global styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        main {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }
        .delete-button {
            padding: 5px;
            color: red;
            border-color: red;
            border-radius: 10px;
        }

        

    </style>

</body>
</html>
