@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor _httpContext
@{
    var Username = _httpContext.HttpContext.Session.GetString("UserName");
}

<ul class="navbar-nav">

    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">Hello @Username </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>

</ul>
